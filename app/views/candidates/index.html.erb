<p style="color: green"><%= notice %></p>

<h1>Candidates</h1>

<div>
  <%= button_to "Populate Candidates", action: 'populate_candidates' %>
</div>

<div id="candidates">
  <% @candidates.each do |candidate| %>
    <%= render candidate %>
    <p>
      <%= link_to "Show this candidate", candidate %>
    </p>
  <% end %>
</div>

<%= link_to "New candidate", new_candidate_path %>
